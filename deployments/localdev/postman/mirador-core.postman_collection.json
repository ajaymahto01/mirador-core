  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Compute dynamic timestamps for examples",
          "const now = new Date();",
          "pm.collectionVariables.set('now_rfc', now.toISOString());",
          "pm.collectionVariables.set('now_ms', Date.now());",
          "pm.collectionVariables.set('start_ms', Date.now() - 10*60*1000);",
          "pm.collectionVariables.set('start_rfc', new Date(Date.now() - 10*60*1000).toISOString());",
          "if (!pm.collectionVariables.get('traceService')) pm.collectionVariables.set('traceService','telemetrygen');"
        ]
      }
    }
  ],
